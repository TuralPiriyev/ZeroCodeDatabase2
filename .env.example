# Frontend (do NOT commit real secrets)
REACT_APP_PAYPAL_CLIENT_ID=
REACT_APP_PAYPAL_PLAN_ID=
REACT_APP_PAYPAL_ENV=sandbox # or production

# Server (keep this in server .env, never expose to client)
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_API_BASE=
HF_KEY=sk_your_key_here # Preferred: set your Hugging Face API key here. ZEROCODEDB_API_KEY is also recognized for backward compatibility.
OPENAI_API_KEY=sk_your_key_here # Optional: legacy OpenAI key; proxy will accept OPENAI_API_KEY if HF_KEY not set

# Convenience: client token name used in some diagnostics
HF_TOKEN=YOUR_HF_TOKEN
